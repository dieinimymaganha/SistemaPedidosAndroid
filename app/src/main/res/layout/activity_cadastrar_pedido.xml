<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.activity.CadastrarPedido">

    <EditText
        android:id="@+id/activity_cad_pedido_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o CPF"
        android:layout_margin="8dp"

        android:inputType="number" />

        <Spinner
            android:id="@+id/activity_cad_pedido_spinner_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="97dp"
            android:layout_margin="8dp"

            tools:tooltipText="@string/Descrição" />

        <EditText
            android:id="@+id/activity_cad_pedido_quantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade"
            android:layout_margin="8dp"

            android:inputType="number" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/activity_cad_pedido_pedido_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/botoes"
            android:text="Cadastrar"
            android:textColor="#fff" />

        <Button
            android:id="@+id/activity_cad_pedido_pedido_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/botoes"
            android:text="Cancelar"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>